@using MargotCodeSystem.Database.DbModels
@model ResidentModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="styles.css">

    <style>
        .title {
            font-family: OPTIFrankfurter;
            font-size: 35px;
            text-align: left;
            margin: 0;
            padding: 20px 35px;
            line-height: 1;
        }

        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            display: flex;
            height: 100vh;
        }

        .sidebar {
            width: 300px;
            background-color: #F4B628;
            padding: 0;
            border-top-right-radius: 40px;
            border-bottom-right-radius: 40px;
            font-family: OPTIFrankfurter;
            font-size: 22px;
            position: fixed;
            left: 0;
            top: 0;
            bottom: 0;
            display: flex;
            flex-direction: column;
        }

            .sidebar .title {
                font-family: OPTIFrankfurter;
                font-size: 40px;
                color: white;
                text-align: left;
                margin: 0;
                padding: 25px 25px;
                padding-top: 0;
            }

            .sidebar a {
                color: white;
                text-decoration: none;
                transition: color 0.3s ease;
                border-radius: 20px;
                margin-bottom: 20px;
                padding: 12px 25px;
                background-color: #C21A22;
                border-radius: 0 30px 30px 0;
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
                display: block;
                width: 280px;
            }

                .sidebar a.clicked {
                    background-color: white;
                    color: #C21A22;
                }

        .content-wrapper {
            margin-left: 250px;
            flex: 1;
            background-color: white;
            padding: 20px;
            padding-top: 50px;
        }

        .content {
            background-color: white;
            padding: 50px;
        }

        .record {
            font-family: OPTIFrankfurter;
            font-size: 15px;
            padding-left: 0;
            padding-top: 0;
        }

        .table {
            border-collapse: separate;
            border-spacing: 5px 5px;
        }

            .table th {
                border-radius: 10px;
                border: 1px solid #ddd;
                padding: 8px;
                background-color: #FFB000;
                color: white;
                text-align: center;
            }

            .table td {
                border-radius: 10px;
                border: 1px solid #ddd;
                padding: 8px;
                background-color: #C21A22;
                color: white;
            }

        .more-button {
            border-radius: 10px;
            border: none;
            color: white;
            font-family: OPTIFrankfurter;
            font-size: 15px;
            background-color: #FFB000;
            text-align: center;
        }

            .more-button:hover {
                background-color: #CF9207;
                width: 100%;
            }

        .button-container {
            display: flex;
            justify-content: flex-start;
            padding: 20px 0;
        }

        .search-button {
            background-color: #C21A22;
            color: white;
            border: none;
            border-radius: 10px;
            padding: 8px 20px;
            font-size: 16px;
            cursor: pointer;
            font-family: OPTIFrankfurter;
            margin-right: 5px;
        }

            .search-button:hover {
                background-color: #760E13;
            }

        .add-button {
            background-color: #C21A22;
            color: white;
            border: none;
            border-radius: 10px;
            padding: 8px 20px;
            font-size: 16px;
            cursor: pointer;
            font-family: OPTIFrankfurter;
            text-decoration: none;
        }

            .add-button:hover {
                background-color: #760E13;
                color: white;
            }
    </style>
</head>
<body>

    <div class="sidebar">
        <div class="title">
            <br />BARANGAY<br /> MARGOT<br /> DATABASE<br /> SYSTEM
        </div>
        <a href="Residents" onclick="showResidents()" id="residents">RESIDENTS</a>
        <a href="Senior Citizens" onclick="showSeniorCitizens()" id="seniorCitizens">SENIOR CITIZEN</a>
        <a href="Medication Users" onclick="showMedicationUsers()" id="medicationUsers">MEDICATION USERS</a>
        <a href="Street Sweepers" onclick="showStreetSweepers()" id="streetSweepers">STREET SWEEPERS</a>
        <a href="Pet Owners" onclick="showPetOwners()" id="petOwners">PET OWNERS</a>
        <a href="House Occupants" onclick="showHouseOccupants()" id="houseOccupants">HOUSE OCCUPANTS</a>
    </div>

    <div class="content-wrapper">
        <div class="button-container">
            <button class="search-button">SEARCH</button>
            <a href="/Resident/Index" class="add-button">ADD NEW RECORD</a>
        </div>

        <div class="content" id="dynamicContent"></div>

        <div class="record">
            <table class="table">
                <thead>
                    <tr>
                        <th>FULL NAME</th>
                        <th>FIRST NAME</th>
                        <th>FULL RECORD</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
@*                     @foreach (var resident in Model)
                    {
                        <tr>
                            <td>@resident.FullName</td>
                            <td>@resident.ProvincialAddress</td>
                            <td>@resident.MiddleName</td>
                            <th><a href="@Url.Action("Details", "Resident", new { id = resident.Id })">OPTIONS</a></th>
                        </tr>
                    } *@
                </tbody>
            </table>
        </div>
    </div>

    <script src="~/js/dashboard_filter.js"></script>
    <script src="~/js/dashboard.js"></script>

</body>
</html>
