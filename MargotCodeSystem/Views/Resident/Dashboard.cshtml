@using MargotCodeSystem.Database.DbModels
@model IEnumerable<DashboardModel>

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="styles.css">

    <style>
        .title {
            font-family: OPTIFrankfurter;
            font-size: 35px;
            text-align: left;
            margin: 0;
            padding: 20px 35px;
            line-height: 1;
        }

        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            display: flex;
            height: 100vh;
        }

        .sidebar {
            width: 300px;
            background-color: #F4B628;
            padding: 0;
            border-top-right-radius: 40px;
            border-bottom-right-radius: 40px;
            font-family: OPTIFrankfurter;
            font-size: 22px;
            position: fixed;
            left: 0;
            top: 0;
            bottom: 0;
            display: flex;
            flex-direction: column;
        }

            .sidebar .title {
                font-family: OPTIFrankfurter;
                font-size: 40px;
                color: white;
                text-align: left;
                margin: 0;
                padding: 25px 25px;
                padding-top: 0;
            }

            .sidebar a {
                color: white;
                text-decoration: none;
                transition: color 0.3s ease;
                border-radius: 20px;
                margin-bottom: 20px;
                padding: 12px 25px;
                background-color: #C21A22;
                border-radius: 0 30px 30px 0;
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
                display: block;
                width: 280px;
            }

                .sidebar a.clicked {
                    background-color: white;
                    color: #C21A22;
                }

        .content-wrapper {
            margin-left: 300px;
            flex: 1;
            background-color: white;
            padding: 20px;
            padding-top: 50px;
        }

        .content {
            background-color: white;
            padding: 50px;
        }

        .record {
            font-family: OPTIFrankfurter;
            font-size: 15px;
            padding-left: 0;
            padding-top: 0;
        }

        .table {
            border-collapse: separate;
            border-spacing: 5px 5px;
        }

            .table th {
                border-radius: 10px;
                border: 1px solid #ddd;
                padding: 8px;
                background-color: #FFB000;
                color: white;
                text-align: center;
            }

            .table td {
                border-radius: 10px;
                border: 1px solid #ddd;
                padding: 8px;
                background-color: #C21A22;
                color: white;
            }

        .more-button {
            border-radius: 10px;
            border: none;
            color: white;
            font-family: OPTIFrankfurter;
            font-size: 15px;
            background-color: #FFB000;
            text-align: center;
        }

            .more-button:hover {
                background-color: #CF9207;
                width: 100%;
            }

        .button-container {
            display: flex;
            justify-content: flex-start;
            padding: 20px 0;
        }

        .search-button {
            background-color: #C21A22;
            color: white;
            border: none;
            border-radius: 10px;
            padding: 8px 20px;
            font-size: 16px;
            cursor: pointer;
            font-family: OPTIFrankfurter;
            margin-right: 5px;
        }

            .search-button:hover {
                background-color: #760E13;
            }

        .add-button {
            background-color: #C21A22;
            color: white;
            border: none;
            border-radius: 10px;
            padding: 8px 20px;
            font-size: 16px;
            cursor: pointer;
            font-family: OPTIFrankfurter;
            text-decoration: none;
        }

            .add-button:hover {
                background-color: #760E13;
                color: white;
            }
    </style>

    <style>
        .more {
            color:  white;
            text-decoration: none;
            cursor: pointer;

        }

        .more:hover {
            background-color: #CF9207;
        }

        .view-button{
            color: white;
            text-decoration: none;
        }

        .view-button:hover {
            background-color: #CF9207;
        }

        .edit-button {
            color: white;
            text-decoration: none;
        }

        .edit-button:hover {
            background-color: #CF9207;
        }

        .delete-button {
            color: white;
            text-decoration: none;
        }

        .delete-button:hover {
            background-color: #CF9207;
        }

        .options-container {
            margin-top: 5px;
        }
    </style>

</head>
<body>
    <div class="sidebar">
        <div class="title">
            <br />BARANGAY<br /> MARGOT<br /> DATABASE<br /> SYSTEM
        </div>
        <a href="#" id="residents">RESIDENTS</a>
        <a href="#" id="seniorCitizens">SENIOR CITIZEN</a>
        <a href="#" id="medicationUsers">MEDICATION USERS</a>
        <a href="#" id="streetSweepers">STREET SWEEPERS</a>
        <a href="#" id="petOwners">PET OWNERS</a>
        <a href="#" id="houseOccupants">HOUSE OCCUPANTS</a>

    </div>

    <div class="content-wrapper">
        <div class="button-container">
            <button class="search-button">SEARCH</button>
            <a href="/Resident/AddResident" class="add-button">ADD NEW RECORD</a>
        </div>

        <div class="content" id="dynamicContent"></div>

        <div class="record">
            <table class="table">
                <thead>
                    <tr>
                        <th>FULL NAME</th>
                        <th>PROVINCIAL ADDRESS</th>
                        <th>FULL RECORD</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="2">No records found.</td>
                        </tr>
                    }
                    else
                    {
                       @foreach (var item in Model)
                       {
                            <tr>
                                <td>@item.fullName</td>
                                <td>@item.provincialAddress</td>
                                <th>
                                    <a href="javascript:void(0);" class="more-button" onclick="toggleOptions('@item.Id')">OPTIONS</a>
                                    <div id="options-@item.Id" class="options-container" style="display: none;">
                                        <a href="@Url.Action("View", "Resident", new { id = item.Id })" class="view-button">VIEW</a>
                                        <a href="@Url.Action("Edit", "Resident", new { id = item.Id })" class="edit-button">EDIT</a> |
                                        <a href="@Url.Action("Delete", "Resident", new { id = item.Id })" class="delete-button" onclick="return confirm('Are you sure you want to delete this item?');">DELETE</a>
                                    </div>
                                </th>
                            </tr>
                       }
                    }
                </tbody>
            </table>
        </div>
    </div>

    <script src="~/js/dashboard_filter.js"></script>
    <script src="~/js/dashboard.js"></script>

    <script>
        function toggleOptions(itemId) {
            var optionsContainer = document.getElementById('options-' + itemId);
            if (optionsContainer.style.display === 'none' || optionsContainer.style.display === '') {
                optionsContainer.style.display = 'block';
            } else {
                optionsContainer.style.display = 'none';
            }
        }
    </script>

</body>
</html>
