@using MargotCodeSystem.Models.Accounts
@model RegistrationModel

<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            background-image: url("/Images/regbg.png");
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            text-align: center;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 80vh;
            margin-top: 50px;
            padding-top: 30px;
            background-color: #f2f2f2;
            font-family: 'Fira Code';
            color: white;
            overflow: hidden;
        }


        .register-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 50%;
        }

        .register-box {
            padding-top: 30px;
            padding-bottom: 15px;
            border: 1px solid #ccc;
            box-sizing: border-box;
            background-color: #F4B628;
            text-align: center;
            border-radius: 30px;
            color: white;
            max-width: 420px;
            width: 100%;
            height: auto;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

            .register-box input[type="text"],
            .register-box input[type="password"],
            .register-box input[type="email"] {
                width: 100%;
                padding: 10px;
                margin: 4px 0;
                border: 1px solid #ccc;
                box-sizing: border-box;
                background-color: #F6DDC9;
                border-radius: 30px;
                color: #C21A22;
                font-size: 14px;
            }

            .register-box input[type=text]::placeholder,
            .register-box input[type=email]::placeholder,
            .register-box input[type=password]::placeholder {
                color: #C21A22;
            }

        button {
            background-color: #C21A22;
            color: white;
            padding: 8px;
            margin: 8px;
            border: none;
            cursor: pointer;
            border-radius: 20px;
            width: 50%;
            max-width: 200px;
        }

        .back-button:hover {
            color: #F4B628;
        }

        button:hover {
            opacity: 0.8;
        }

        .header {
            font-family: 'OPTIFrankfurter', sans-serif;
            position: absolute;
            top: 33px;
            left: 40px;
            font-size: 40px;
            font-weight: bold;
            color: white;
        }

        .back-button {
            font-family: 'OPTIFrankfurter', sans-serif;
            position: absolute;
            top: 30px;
            right: 30px;
            font-size: 40px;
            color: white;
            text-decoration: none;
        }

        .welcome {
            font-family: 'OPTIFrankfurter', sans-serif;
            font-size: 45px;
            color: white;
            line-height: 1;
        }

        .please {
            font-family: 'Fira Code', sans-serif;
            font-size: 15px;
            color: white;
            line-height: 3;
        }

        .shadow-text {
            color: black;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
        }
    </style>
</head>

<body>

    <main>
        @{
            if (ViewBag.SuccessMessage != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>Success!</strong> @ViewBag.SuccessMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <strong>Error!</strong> @ViewBag.ErrorMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
        }

        <div class="register-container">
            <div class="register-box">
                <div class="welcome">REGISTER AS <br>ADMIN<br /></div>
                <div class="please">PLEASE ENTER CORRECT DETAILS.</div>
    
                        @using (Html.BeginForm("Index","Register",FormMethod.Post))
                        {
                            @Html.ValidationSummary(true,"",new {@class = "text-danger"})

                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", placeholder = "FIRST NAME", name = "fname", required = "required" })
                                    @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", placeholder = "LAST NAME", name = "lname", required = "required" })
                                    @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "email", placeholder = "EMAIL", name = "email", required = "required" })
                                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "USERNAME", name = "uname", required = "required" })
                                    @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.Password, new { @class = "form-control", type = "password", placeholder = "PASSWORD", name = "psw", required = "required" })
                                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "form-control", type = "password", placeholder = "CONFIRM PASSWORD", name = "conpsw", required = "required" })
                                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                                </div>
                                <button type="submit">REGISTER</button>

                         }

                         
                                <div class="please">
                                    ALREADY HAVE AN ACCOUNT?
                                    <a href="@Url.Action("Index","Login")">LOGIN.</a>
                                </div
                        
            </div>
        </div>
    </main>
</body>
</html>