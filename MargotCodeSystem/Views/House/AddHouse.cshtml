@model MargotCodeSystem.Database.DbModels.HouseOccupantModel

<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        body {
            font-family: OPTIFrankfurter;
            font-size: 25px;
            padding-top: 80px;
        }

        .top-bar {
            background-color: #F4B628;
            display: flex;
            justify-content: space-between;
            align-items: center;
            width: 100%;
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            z-index: 1000;
            border-radius: 0 0 30px 30px;
        }

        .back-button {
            font-family: 'OPTIFrankfurter', sans-serif;
            position: absolute;
            top: 0;
            margin: 0;
            right: 100px;
            font-size: 20px;
            color: #C21A22;
            border: none;
            padding-top: 15px;
            background-color: transparent;
            text-decoration: none;
        }

            .back-button:hover {
                color: #760E13;
            }

        table {
            border-collapse: collapse;
            width: 100%;
            margin-bottom: 0;
            margin-top: 0;
            border-radius: 15px;
            overflow: hidden;
        }

        th,
        td {
            padding: 5px;
            text-align: left;
        }

        th {
            padding-right: 0;
        }

        .name-inputs {
            display: flex;
            gap: 10px;
            color: #C21A22;
            width: calc(100% - 10px);
        }

        h1 {
            font-family: 'OPTIFrankfurter';
            font-size: 40px;
            color: white;
            padding-left: 25px;
            padding-top: 5px;
        }

        .add-button {
            padding: 10px 20px;
            font-family: 'OPTIFrankfurter';
            background-color: #F4B628;
            color: white;
            text-decoration: none;
            border-radius: 10px;
            border: none;
            margin-top: 10px;
            font-size: 16px;
        }

            .add-button:hover {
                background-color: #CF9207;
                color: white;
            }


        select,
        input[type="text"] {
            width: calc(100% - 12px);
            padding: 5px;
            border-radius: 5px;
            border: 1px solid #C21A22;
            background-color: #C21A22;
            color: white;
            font-family: OPTIFrankfurter;
            margin-bottom: 5px;
            box-sizing: border-box;
            font-size: 20px;
            margin-left: 0;
        }

            input[type="text"]::placeholder {
                color: white;
                font-size: 13px;
                text-align: left;
            }
    </style>
</head>

<body>
    <main>
        @{
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <strong>Error!</strong> @ViewBag.ErrorMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
        }


        <div class="top-bar">
            <a href="/House/HouseDashboard" class="back-button">BACK</a>
            <h1> ADD HOUSE OCCUPANTS: </h1>
        </div>

        <form asp-action="AddHouse" method="post">
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            <div class="form-group">
                <label asp-for="HouseName" class="control-label">HOUSE NAME</label>
                <input asp-for="HouseName" class="form-control" />
                <span asp-validation-for="HouseName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ResidentId" class="control-label">Full Name</label>
                <select asp-for="ResidentId" class="form-control" asp-items="@ViewBag.Residents">
                    <option value="">-- Select --</option>
                </select>
                <span asp-validation-for="ResidentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Position" class="control-label">POSITION</label>
                <input asp-for="Position" class="form-control" />
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age" class="control-label">AGE</label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SourceIncome" class="control-label">SOURCE OF INCOME</label>
                <input asp-for="SourceIncome" class="form-control" />
                <span asp-validation-for="SourceIncome" class="text-danger"></span>
            </div>
            <button type="submit" class="add-button">ADD HOUSE OCCUPANT</button>
        </form>

    </main>
</body>
</html>
