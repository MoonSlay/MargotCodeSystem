@model MargotCodeSystem.Database.DbModels.HouseOccupantModel

<!DOCTYPE html>
<html lang="en">
<head>
    <style>

        body {
            font-family: OPTIFrankfurter;
            font-size: 25px;
            padding-top: 80px;
        }

        .top-bar {
            background-color: #F4B628;
            display: flex;
            justify-content: space-between;
            align-items: center;
            width: 100%;
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            z-index: 1000;
            border-radius: 0 0 30px 30px;
        }

        .back-button {
            font-family: 'OPTIFrankfurter', sans-serif;
            position: absolute;
            top: 0;
            margin: 0;
            right: 100px;
            font-size: 20px;
            color: #C21A22;
            border: none;
            padding-top: 15px;
            background-color: transparent;
            text-decoration: none;
        }

            .back-button:hover {
                color: #760E13;
            }

        table {
            border-collapse: collapse;
            width: 100%;
            margin-bottom: 0;
            margin-top: 0;
            border-radius: 15px;
            overflow: hidden;
        }

        th,
        td {
            padding: 5px;
            text-align: left;
        }

        th {
            padding-right: 0;
        }

        .name-inputs {
            display: flex;
            gap: 10px;
            color: #C21A22;
            width: calc(100% - 10px);
        }

        h1 {
            font-family: 'OPTIFrankfurter';
            font-size: 40px;
            color: #C21A22;
            padding-left: 25px;
            padding-top: 5px;
        }

        .btn-container {
            position: relative;
            text-align: right;
        }

        .btn-register {
            background-color: #FFB000;
            color: white;
            padding: 10px 10px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
            font-family: OPTIFrankfurter;
            bottom: 0;
            right: 140px;
        }

            .btn-register:hover {
                background-color: #CF9207;
            }

        select,
        input[type="text"] {
            width: calc(100% - 12px);
            padding: 5px;
            border-radius: 5px;
            border: 1px solid #ddd;
            background-color: #C21A22;
            color: white;
            font-family: OPTIFrankfurter;
            margin-bottom: 5px;
            box-sizing: border-box;
            font-size: 20px;
            margin-left: 0;
        }

            input[type="text"]::placeholder {
                color: #C0C6C7;
                font-size: 13px;
                text-align: left;
            }

    </style>

</head>

<body>
    <main>
        @{
            if (ViewBag.SuccessMessage != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>Success!</strong> @ViewBag.SuccessMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <strong>Error!</strong> @ViewBag.ErrorMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
        }

        <div class="top-bar">
            <a href="/House/HouseDashboard" class="back-button">BACK</a>
            <h1> ADD HOUSE OCCUPANTS: </h1>
        </div>

        @using (Html.BeginForm("AddHouse", "House", FormMethod.Post))
        {
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <table>
                <tr>
                    <th>FULL NAME: </th>
                    <td class="name-inputs">
                        @Html.TextBoxFor(m => m.fullName, new { @class = "form-control", placeholder = "FULL NAME" })
                    </td>
                </tr>

                <tr>
                    <th>POSITION: </th>
                    <td class="name-inputs">
                        @Html.TextBoxFor(m => m.Position, new { @class = "form-control", placeholder = "POSITION" })
                        @Html.ValidationMessageFor(m => m.Position, "", new { @class = "text-danger" })
                    </td>
                </tr>

                <tr>
                    <th>AGE: </th>
                    <td class="name-inputs">
                        @Html.TextBoxFor(m => m.Age, new { @class = "form-control", placeholder = "AGE" })
                        @Html.ValidationMessageFor(m => m.Age, "", new { @class = "text-danger" })
                    </td>
                </tr>

                <tr>
                    <th>BIRTH DATE: </th>
                    <td class="name-inputs">
                        @Html.TextBoxFor(m => m.BirthDate, new { @class = "form-control", placeholder = "BIRTH DATE" })
                        @Html.ValidationMessageFor(m => m.BirthDate, "", new { @class = "text-danger" })
                    </td>
                </tr>

                <tr>
                    <th>CIVIL STATUS: </th>
                    <td class="name-inputs">
                        @Html.TextBoxFor(m => m.CivilStatus, new { @class = "form-control", placeholder = "CIVIL STATUS" })
                        @Html.ValidationMessageFor(m => m.CivilStatus, "", new { @class = "text-danger" })
                    </td>
                </tr>

                <tr>
                    <th>SOURCE OF INCOME : </th>
                    <td class="name-inputs">
                        @Html.TextBoxFor(m => m.SourceIncome, new { @class = "form-control", placeholder = "SOURCE OF INCOME" })
                        @Html.ValidationMessageFor(m => m.SourceIncome, "", new { @class = "text-danger" })
                    </td>
                </tr>

            </table>

            <button type="submit" class="btn-register">REGISTER</button>
        }
    </main>
</body>
</html>