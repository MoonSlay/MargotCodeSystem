@using MargotCodeSystem.Models.Accounts
@model LoginModel

<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            background-image: url("Images/index.png");
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            text-align: center;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background-color: #f2f2f2;
            font-family: 'Fira Code';
            color: white;
        }

        .login-container {
            display: flex;
            justify-content: flex-end;
            align-items: center;
            height: 100%;
        }

        .login-box {
            padding: 30px;
            padding-right: 30px;
            border: 1px solid #ccc;
            box-sizing: border-box;
            background-color: #F4B628;
            text-align: center;
            border-radius: 30px;
            color: #C21A22;
            max-width: 500px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        input[type=text]::placeholder,
        input[type=password]::placeholder {
            color: #C21A22;
            background-color: #F6DDC9;
        }

        input[type=text],
        input[type=password] {
            width: 100%;
            padding: 12px;
            margin: 8px 0;
            border: 1px solid #ccc;
            box-sizing: border-box;
            background-color: #F6DDC9;
            border-radius: 30px;
            color: #C21A22;
            font-size: 15px;
        }

        button {
            background-color: #C21A22;
            color: white;
            padding: 14px 20px;
            margin: 8px 0;
            border: none;
            cursor: pointer;
            border-radius: 30px;
            width: 40%;
            max-width: 200px;
            font-family: OPTIFrankfurter;
        }

            button:hover {
                opacity: 0.8;
            }

        .welcome {
            font-family: OPTIFrankfurter;
            font-size: 60px;
            color: white;
        }

        .title {
            position: fixed;
            top: 36%;
            left: 0;
            transform: translateY(-50%);
            font-family: OPTIFrankfurter;
            font-size: 90px;
            color: white;
            text-align: left;
            margin: 40px;
            padding: 40px;
        }

        .please {
            font-family: 'Fira Code';
            font-size: 15px;
            color: white;
        }

            .please a {
                color: #C21A22;
            }

                .please a:hover {
                    color: #760E13;
                }

    </style>
</head>
<body>
    <main>

        @{
            if (ViewBag.SuccessMessage != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>Success!</strong> @ViewBag.SuccessMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <strong>Error!</strong> @ViewBag.ErrorMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
        }

        <div class="title">
            <br />BARANGAY<br /> MARGOT<br /> DATABASE<br /> SYSTEM
        </div>

        <div class="login-container">
            <div class="login-box">
                <div class="welcome">WELCOME! <br /></div>
                <div class="please">PLEASE LOGIN IF ADMIN.</div>
                @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Username, new { @placeholder = "USERNAME", required = "required", type = "text" })
                        @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Password, new { @placeholder = "PASSWORD", required = "required", type = "password" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.RememberMe)
                        @Html.CheckBoxFor(m => m.RememberMe, new { @class = "form-check-input" })
                    </div>

                    <button type="submit">LOGIN</button>


                }

                <div class="please">
                    DON'T HAVE AN ACCOUNT?
                    <a href="@Url.Action("Register","Account")">REGISTER.</a>
                </div>

            </div>
        </div>

    </main>
</body>
</html>
